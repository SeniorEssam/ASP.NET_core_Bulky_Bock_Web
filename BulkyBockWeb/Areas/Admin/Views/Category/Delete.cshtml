@model Category
<form method="post" asp-action="Delete" class="border p-3 mt-4">
    <input asp-for="Id" hidden />
    <h2 class="row pb-2 text-primary"> Delete Category</h2>
    <hr/>
    @*<div asp-validation-summary="All"></div>*@
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" disabled class="form-control"/>
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="pt-3">
        <button type="submit" class="btn btn-danger " style="width:fit-content">Delete</button>
        <a type="button" asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:fit-content">Back To Category</a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
